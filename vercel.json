{
  "version": 2,
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/index.js": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 60,
      "includeFiles": "backend/**"
    }
  },
  "routes": [
    { "src": "/api(/.*)?", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/index.html", "status": 200 }
  ],
  "env": {
    "MONGODB_URI": "@MONGODB_URI",
    "JWT_SECRET": "@JWT_SECRET",
    "NODE_ENV": "production"
  }
}
